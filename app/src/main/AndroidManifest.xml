<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.student.fahrtenbuchapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".logic.SplashScreenActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/FullScreenTheme" />

        <activity android:name=".login.RegistrationActivity" />
        <activity android:name=".logic.ShowAllCarsActivity" />
        <activity android:name=".login.WaitForLoginActivity" />

        <activity
            android:name=".logic.ReservationActivity"
            android:label="@string/title_activity_reservation"
            android:parentActivityName=".logic.ShowAllCarsActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.student.fahrtenbuchapp.logic.ShowAllCarsActivity" />
        </activity>

        <activity
            android:name=".logic.StartDrivingActivity"
            android:parentActivityName=".logic.ShowAllCarsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.student.fahrtenbuchapp.logic.ShowAllCarsActivity" />
        </activity>

        <activity android:name=".TokenActivity"
            android:label="Token Activity"
            android:parentActivityName=".login.LoginActivity"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>